#!/bin/zsh

missing_parameter () {
   echo "Missing parameter. Run:"
   echo
   echo "docker-compose run --rm toolbox help"
   echo
   echo "to display the help menu."
   echo
}

show_help () {
   echo "Run the following commands:"
   echo
   echo "- ansible"
   echo "- packer"
   echo "- terraform"
   echo "- help"
   echo
}

echo
echo "*******************"
echo "* Devops Toolbox  *"
echo "*******************"
echo

if [ $# -eq 0 ]
  then
    missing_parameter
    exit
fi

case $1 in
  ansible*)
    cat /devops/versions/ansible.txt
    echo
    echo "Chdir -> /devops/ansible"
    cd /devops/ansible
    $@
    ;;
  packer)
    cat /devops/versions/packer.txt
    echo
    echo "Chdir -> /devops/packer"
    cd /devops/packer
    $@
    ;;
  terraform)
    cat /devops/versions/terraform.txt
    echo
    echo "Chdir -> /devops/terraform"
    cd /devops/terraform
    $@
    ;;
  help)
    show_help
    ;;
  *)
    $@
    ;;
esac
