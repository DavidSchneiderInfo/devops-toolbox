{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu-20.04",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": ["self"]
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "docker-node"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/provision.yml",
      "extra_arguments": [
        "-e ansible_remote_tmp=/tmp/.ansible/tmp"
      ]
    }
  ]
}